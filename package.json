{
  "name": "react-image-promise",
  "version": "0.0.1",
  "description": "Renders an image based on a promise or not",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack -w",
    "dev": "webpack-dev-server",
    "test": "jest",
    "test-ci": "jest --runInBand --coverage",
    "build": "NODE_ENV=production tsc -p ./tsconfig.prod.json",
    "release": "npm version patch && git push --tags && git push && npm publish",
    "prepublishOnly": "test-ci && yarn build"
  },
  "repository": "git@github.com:zzarcon/react-image-promise.git",
  "author": "zzarcon",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "awesome-typescript-loader": "^3.4.1",
    "jest": "^22.0.6",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^2.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "resetMocks": true
  }
}
